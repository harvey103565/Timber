<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="woods.log.sample.SampleActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="167dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minLines="4"
        android:text="A sample text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <CheckBox
        android:id="@+id/checkBox_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toRightOf="@+id/checkBox_v"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/checkBox_i"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.488" />

    <CheckBox
        android:id="@+id/checkBox_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_v"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="96dp"
        android:layout_marginTop="32dp"
        android:text="E"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/checkBox_w"
        app:layout_constraintRight_toLeftOf="@+id/checkBox_wtf"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_d" />

    <CheckBox
        android:id="@+id/checkBox_wtf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WTF"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_i"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Print"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Exception"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_w" />

    <CheckBox
        android:id="@+id/checkBox_thr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="32dp"
        android:text="ThrowException"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox_e"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_e" />

</android.support.constraint.ConstraintLayout>
